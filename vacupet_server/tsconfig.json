{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDirs": [
      "/src/**/*"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [
    "ES5"
  ],
  "include": [
    "src/**/*",
    "./**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
